<UserControl x:Class="FifaChampionshipWP.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Margin="0,8,0,0" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Pedro Henrique Pozzer" VerticalAlignment="Top" Margin="10,28,0,0" Width="355" FontSize="28" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Time: Milan" VerticalAlignment="Top" Margin="10,13,0,0" Width="238" FontSize="18" Foreground="#FFAEAEAE" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Ativo" VerticalAlignment="Top" Margin="12,58,0,0" Width="238" FontSize="18" Foreground="#FFAEAEAE" Grid.ColumnSpan="2"/>

    </Grid>
</UserControl>